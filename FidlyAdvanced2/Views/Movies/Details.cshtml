@model FidlyAdvanced2.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre Type: @Model.GenreType.Name</li>
    <li>Released Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Added Date: @Model.AddedDate.ToShortDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>