@model IEnumerable<FidlyAdvanced2.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<table class="table table-bordered table-hover" id="movies">
    <thead>
        <tr>
            <td>Movies</td>
            <td>Genre</td>
        </tr>
    </thead>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $('#movies').DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genreType.name"
                    }
                ]
            });
        });
    </script>
}