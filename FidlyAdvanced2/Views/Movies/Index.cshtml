@model IEnumerable<FidlyAdvanced2.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

@if (Model.Count() == 0)
{
    <p>There is no movie yet.</p>
}
else
{
    <button class="btn btn-primary" id="newMovieButton">@Html.ActionLink("New Movie", "NewMovie", "Movies")</button>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Movies</td>
                <td>Genre Type</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.GenreType.Name</td>
                </tr>
            }
        </tbody>
    </table>
}