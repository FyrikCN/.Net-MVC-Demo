@model IEnumerable<FidlyAdvanced2.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

@if (Model.Count() == 0)
{
    <p>There is no movie yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Movies</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                </tr>
            }
        </tbody>
    </table>
}